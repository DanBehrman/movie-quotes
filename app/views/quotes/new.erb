<h2>Add Quote</h2>
<div class="ui form error">
    <% if flash[:messages] %>
        <% flash[:messages].each do |message| %>
            <div class="ui error message"><%= message %></div>
        <% end %>
    <% end %>
</div>

<%= form_for @quote, html: {class: "ui form" } do |f| %>
    <br>
      <div class="field">
        <%= f.text_area :text, options = { placeholder: "Type Quote Here"} %>
        </div>
    <div class="ui divider"></div>
      <div class="field">
        <%= f.text_field :author, options = { placeholder: "Movie Title"} %>
    </div>
    <%= f.hidden_field :high_score, value: 0 %>
    <div class="submit-holder">
        <%= f.submit "Add Quote!", class:"black ui button"%>
<% end %>

