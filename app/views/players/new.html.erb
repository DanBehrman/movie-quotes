<h2>Grow a Player from Scratch</h2>
<div class="ui form error">
    <% if flash[:messages] %>
        <% flash[:messages].each do |message| %>
            <div class="ui error message"><%= message %></div>
        <% end %>
    <% end %>
</div>

<%= form_for @player, html: {class: "ui form" } do |f| %>
    <br>
    <div class="field">
        <%= f.text_field :user_name, options = { placeholder: "Username"} %>
    </div>
    <div class="field">
        <%= f.password_field :password, options = { placeholder: "Password"} %>
    </div>
        <div class="ui divider"></div>
    <div class="field">
        <%= f.text_area :motto, options = { placeholder: "Your Life Motto"} %>
    </div>
    <%= f.hidden_field :high_score, value: 0 %>
    <div class="submit-holder">
        <%= f.submit "Grow! Grow!", class:"black ui button"%>
<% end %>

