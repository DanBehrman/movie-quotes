<h1>Grow a Player from Scratch</h1>
<div class="ui form error">
    <% if flash[:messages] %>
        <% flash[:messages].each do |message| %>
            <div class="ui error message"><%= message %></div>
        <% end %>
        <br>
    <% end %>
</div>

<%= form_for @player do |f| %>
    <div class="ui labled input">
        <label class="ui label">User Name*</label><%= f.text_field :user_name %><br><br>
    </div>
    <div class="ui labled input">
        <a class="ui label">Password*</a><%= f.password_field :password %><br><br>
    </div>
        <div class="ui divider"></div>
    <div class="ui labled input">
        <a class="ui label">Motto*</a><%= f.text_area :motto %><br><br>
    </div>
    <%= f.hidden_field :high_score, value: 0 %>
    <%= f.submit class:"ui button"%>
<% end %>

