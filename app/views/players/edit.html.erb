<h1>Emerge a Player from their Cocoon</h1>
<ul>
    <% if flash[:messages] %>
        <% flash[:messages].each do |message| %>
            <li><%= message %></li>
        <% end %>
    <% end %>
</ul>

<%= form_for @player do |f| %>
    <label>User Name: </label><%= f.text_field :user_name %><br><br>
     <label>Password: </label><%= f.password_field :password %><br><br>
     <label>Motto: </label><%= f.text_area :motto %><br><br>
     <%= f.hidden_field :high_score, value: 0 %>
    <%= f.submit %>
<% end %>